@using PropertyCore.Application.Property.Commands.LocationAudit;
@model LocationAuditCommand

<div class="col-sm-10 col-md-8 mx-auto">
    <h2>Audit Property</h2>
    @if(ViewBag.ReturnUrl != null)
    {
        <a href="@ViewBag.ReturnUrl"><i class="fas fa-arrow-left"></i> Back</a>
    }
    <hr />
    <form method="post" asp-controller="Property" asp-action="LocationAudit" asp-route-returnUrl="@ViewBag.ReturnUrl">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-row col-xs-12 col-md-4">
            <label for="LocationId">Location:</label>
            <select name="LocationId" id="LocationId" style="width: 100%" class="form-control form-control-sm selectpicker" asp-items="@(new SelectList(ViewBag.PropertyLocations, "Value", "Text", Model.LocationId))">
                <option disabled selected>Choose Location</option>
            </select>
            <span asp-validation-for="LocationId" class="text-danger"></span>
        </div>
        <div class="form-row col-xs-12 col-md-8">
            <label for="BarCodes">Enter Bar Codes:</label>
            <textarea rows="10" class="form-control" asp-for="BarCodes"></textarea>
            <span asp-validation-for="BarCodes" class="text-danger"></span>
        </div>
        <hr />
        <div class="form-group">
            @if (ViewBag.ReturnUrl != null)
            {
                <a href="@ViewBag.ReturnUrl" class="btn btn-primary">Cancel</a>
            }
            <button type="submit" class="btn btn-success float-right" value="Submit">Submit</button>
        </div>
    </form>
</div>

@section Head {
    <link href="~/lib/select2/css/select2.css" rel="stylesheet" />
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#LocationId").select2({
                placeholder: "Select Location",
                allowClear: true
            });
        });
    </script>
}
